<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#7DBDF6" />
            <stroke android:width="4dp" android:color="#E9E9E9" />
            <corners android:radius="40dp" />


        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#F7FCF6" android:centerColor="#F7F7F6" android:endColor="#F7FCF6" android:angle="270" />
            <stroke android:width="1dp" android:color="#7DBDF6" />
            <corners android:radius="40dp" />


        </shape>
    </item>
</selector>



