<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDropDownItem</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:editTextStyle">@style/customEditText</item>
        <item name="android:textViewStyle">@style/customTextView</item>
        <item name="android:buttonStyle">@style/customButtonStyle</item>
    </style>

    <style name="toolBarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="customEditText">
        <item name="android:textColor">#262522</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/edit_text_style</item>
    </style>
    <style name="customTextView" parent="">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#262522</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpinnerDropDownItem" parent="android:Widget.Spinner.DropDown">
        <item name="android:divider">#D8D8D8 </item>
        <item name="android:dividerHeight">0.2dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">#f7f7f7</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:dropDownHeight">60dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>


    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>
    <style name="customButtonStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg17</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="CustomTabWidgetText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ButtonBarButton" />


    <style name="ThemeOverlay.YourApp" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#CC000000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ToolbarTitle1" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#262522</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/gray</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:divider">@null</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#5fa3d0</item>
        <item name="android:divider">@null</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

    </style>
</resources>
