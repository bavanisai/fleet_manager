<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transparent"
    android:background="#CC000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/newEntry"
        android:src="@drawable/demoimg"
        android:layout_marginRight="110dp"
        android:layout_marginEnd="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/linearLayout8"
        android:layout_alignEnd="@+id/linearLayout8" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="59dp"
    android:id="@+id/linearLayout8"
    android:layout_above="@+id/newEntry"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="64dp"
    android:layout_marginStart="64dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Touch here to Add and Update details of"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ffff"
        android:id="@+id/TviewNewEntey"
        android:layout_above="@+id/newEntry"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ffff"
        android:text="                    Driver/Cleaner/Vehicle"
        android:id="@+id/textView22" />
</LinearLayout>
</RelativeLayout>
