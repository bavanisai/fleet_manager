<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context="com.example.fleetmanager.RegistrationActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:background="@drawable/gradientbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/registration"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/regEtName"
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.15"
                    android:hint="@string/name"
                    android:selectAllOnFocus="true"
                    android:paddingLeft="20dp"
                    android:textColor="#262522"
                    android:textColorHint="@color/silver"
                    android:background="@drawable/buttonstyle"
                    android:cursorVisible="true"
                    android:drawablePadding="25sp"
                    android:ems="10"
                    android:layout_marginBottom="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/regEtPhno"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.15"
                    android:selectAllOnFocus="true"
                    android:maxLength="10"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:textColor="#262522"
                    android:textColorHint="@color/silver"
                    android:background="@drawable/buttonstyle"
                    android:cursorVisible="true"
                    android:drawablePadding="25sp"
                    android:ems="10"
                    android:layout_marginBottom="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <Spinner
                    android:id="@+id/RegSpinner"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.15"
                    android:background="@drawable/buttonstyle"
                    android:cursorVisible="true"
                    android:drawablePadding="25sp"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/regEtEmail"
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.15"
                    android:paddingLeft="20dp"
                    android:selectAllOnFocus="true"
                    android:hint="@string/email"
                    android:textColor="#262522"
                    android:textColorHint="@color/silver"
                    android:background="@drawable/buttonstyle"
                    android:cursorVisible="true"
                    android:drawablePadding="25sp"
                    android:ems="10"
                    android:layout_marginBottom="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/regEtPinNumber"
                        android:inputType="phone"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="2dp"
                        android:hint="@string/pinn"
                        android:paddingLeft="20dp"
                        android:selectAllOnFocus="true"
                        android:maxLength="4"
                        android:textColor="#262522"
                        android:textColorHint="@color/silver"
                        android:background="@drawable/buttonstyle"
                        android:cursorVisible="true"
                        android:drawablePadding="25sp"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="37dp"
                        android:paddingLeft="0.3dp"
                        android:paddingRight="0.3dp"
                        android:paddingTop="0.3dp"
                        android:paddingBottom="0.3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/invisibleicon"
                        android:id="@+id/regTvPinNumberShow"
                        android:background="@drawable/hidebutton" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout">

                    <EditText android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/part1"
                        android:textSize="10dp"
                        android:selectAllOnFocus="true"
                        android:maxLength="4"
                        android:background="@drawable/buttonstyle"
                        android:cursorVisible="true"
                        android:drawablePadding="25sp"
                        android:ems="10"
                        android:layout_marginRight="0.15dp"
                        android:layout_weight="1" />

                    <EditText android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:selectAllOnFocus="true"
                        android:paddingLeft="10dp"
                        android:id="@+id/part2"
                        android:textSize="10dp"
                        android:maxLength="4"
                        android:background="@drawable/buttonstyle"
                        android:cursorVisible="true"
                        android:drawablePadding="25sp"
                        android:ems="10"
                        android:layout_marginLeft="0.15dp"
                        android:layout_marginRight="0.15dp"
                        android:layout_weight="1" />

                    <EditText android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/part3"
                        android:textSize="10dp"
                        android:maxLength="4"
                        android:background="@drawable/buttonstyle"
                        android:cursorVisible="true"
                        android:drawablePadding="25sp"
                        android:ems="10"
                        android:selectAllOnFocus="true"
                        android:layout_marginLeft="0.15dp"
                        android:layout_marginRight="0.15dp"
                        android:layout_weight="1" />

                    <EditText android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/part4"
                        android:textSize="10dp"
                        android:maxLength="4"
                        android:selectAllOnFocus="true"
                        android:layout_marginLeft="0.15dp"
                        android:layout_marginRight="0.15dp"
                        android:background="@drawable/buttonstyle"
                        android:cursorVisible="true"
                        android:drawablePadding="25sp"
                        android:ems="10"
                        android:layout_weight="1" />

                    <EditText android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/part5"
                        android:textSize="10dp"
                        android:maxLength="4"
                        android:background="@drawable/buttonstyle"
                        android:cursorVisible="true"
                        android:selectAllOnFocus="true"
                        android:drawablePadding="25sp"
                        android:ems="10"
                        android:layout_marginLeft="0.15dp"
                        android:layout_marginRight="0.15dp"
                        android:layout_weight="1" />

                    <EditText android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/part6"
                        android:textSize="10dp"
                        android:maxLength="4"
                        android:background="@drawable/buttonstyle"
                        android:cursorVisible="true"
                        android:selectAllOnFocus="true"
                        android:inputType="text"
                        android:drawablePadding="25sp"
                        android:ems="10"
                        android:layout_marginLeft="0.15dp"
                        android:imeOptions="actionDone"
                        android:nextFocusForward="@+id/regBtnRegister"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

        <Button
            android:id="@+id/regBtnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/buttonflat"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>