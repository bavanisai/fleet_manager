<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/fragmentTripManageVehicleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_vehicle"
            android:background="@drawable/edit_text_style" />

        <Spinner
            android:id="@+id/fragmentTripManageDriverSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_driver"
            android:background="@drawable/edit_text_style"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/fragmentTripManageSourceSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/select_source"
                android:background="@drawable/edit_text_style"
                />

            <LinearLayout
                android:layout_width="300sp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/fragmentTripManageBtnAddSource"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonflatulta"
                    android:text="ADD LOCATION"
                    android:textSize="12dp"
                    android:textColor="#262522"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <Spinner
            android:id="@+id/fragmentTripManageCleanerSpinnerTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_cleaner"
            android:background="@drawable/edit_text_style"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/fragmentTripManageBtnDestination"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:background="@drawable/buttonflatulta"
                android:text="DESTINATION"
               android:textSize="12dp"
                android:textColor="#262522"
                android:textStyle="bold"
                android:visibility="visible"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:id="@+id/tick_mark"
                android:src="@drawable/img_saved"
                android:layout_weight="0.3"
                android:visibility="gone"
                />

        </LinearLayout>


        <Button
            android:id="@+id/fragmentTripManageBtnSave"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="2sp"
            android:text="@string/save"
            style="@style/customButtonStyle"
          />

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>