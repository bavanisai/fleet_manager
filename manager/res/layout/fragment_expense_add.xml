<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.Expense.AddExpense">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_centerHorizontal="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/fragmentExpenseAddTvDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/buttonflatulta"
                    android:gravity="center"
                    android:text="@string/select_date"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#262522" />


                <Spinner
                    android:id="@+id/fragmentExpenseAddSpinnerVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_style" />

                <Spinner
                    android:id="@+id/fragmentExpenseAddSpinnerDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_style" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:text="@string/voucherno"
                    android:layout_marginTop="5dp"
                  style="@style/customTextView" />

                <EditText
                    android:id="@+id/fragmentExpenseAddEdtVoucherNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    style="@style/customEditText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/particular"
                    android:layout_marginTop="5dp"
                    style="@style/customTextView" />

                <EditText
                    android:id="@+id/fragmentExpenseAddEdtParticular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    style="@style/customEditText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   style="@style/customTextView"
                    android:text="@string/amount"
                    android:layout_marginTop="5dp"
                  />

                <EditText
                    android:id="@+id/fragmentExpenseAddEdtAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    style="@style/customEditText" />
            </LinearLayout>


        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/fragmentExpenseAddBtnAdd"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:text="ADD"
                style="@style/customButtonStyle"
              />

            <Button
                android:id="@+id/fragmentExpenseAddBtnView"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="VIEW"
                style="@style/customButtonStyle"
              />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
