<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:orientation="horizontal"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp">

            <TextView
                android:id="@+id/fragmentExpenseListTvFromDate"
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="2sp"
                android:layout_weight="0.5"
                android:background="@drawable/buttonflatulta"
                android:gravity="center"
                android:text="@string/from_date"
                android:textSize="12sp"
                android:textColor="#262522"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fragmentExpenseListTvToDate"
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="2sp"
                android:layout_weight="0.5"
                android:background="@drawable/buttonflatulta"
                android:gravity="center"
                android:text="@string/to_date"
                android:textSize="12sp"
               android:textStyle="bold"
                android:textColor="#262522" />
        </LinearLayout>

        <Spinner
            android:id="@+id/fragmentExpenseListSpinnerVehicle"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:textColorHint="@color/silver"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonflatulta"
            android:cursorVisible="true"
            android:gravity="center"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragmentExpenseLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:visibility="gone"
        android:orientation="vertical"></LinearLayout>

    <ListView

        android:id="@+id/fragmentExpenseListLV"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.1"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:padding="5dp"

      ></ListView>

</LinearLayout>