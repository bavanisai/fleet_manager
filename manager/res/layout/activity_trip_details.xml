<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:popupTheme="@style/ThemeOverlay.YourApp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/arrow_img"
            android:src="@drawable/back_arrow"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="TRIP DETAILS"
            android:textSize="18dp"
            android:textColor="@color/Black"
            android:paddingTop="6dp" />

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_height="1.5dp"
        android:layout_width="fill_parent"
        android:background="@color/toolbar_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white">

            <LinearLayout
        android:id="@+id/source"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addTripTxtViewSrcLable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:textColor="#262522"
            android:text="SOURCE:"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tripDetailsActivityTvSource"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            android:textColor="#262522"
            android:text="SOURCE"
            android:gravity="left|center|center_horizontal"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/addTripTxtViewDriverLable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/source"
            android:textColor="#262522"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.30"
            android:text="DRIVER :"
            android:gravity="center"
            android:textSize="12sp" />



            <TextView
                android:id="@+id/tripDetailsActivityTvDriver1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#262522"
                android:text="DRIVER 1"
                android:layout_weight="0.70"
                android:gravity="left|center|center_horizontal"
                android:textSize="12sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/tripDetailsActivityLvDestination"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:choiceMode="singleChoice" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripDetailsActivityLvDestination"
        android:layout_marginTop="15dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tripDetailsActivityDestinationBtnEditDestination"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:text="EDIT"
            style="@style/customButtonStyle"/>


        <Button
            android:id="@+id/tripDetailsActivityDestinationBtnDeleteDestination"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="DELETE"
            android:visibility="visible"
            style="@style/customButtonStyle"/>
    </LinearLayout>
</LinearLayout>
    </LinearLayout>
</LinearLayout>