<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/tool_bar"
        android:background="@color/toolbar_color"
        android:elevation="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:popupTheme="@style/ThemeOverlay.YourApp"
        app:titleTextAppearance="@style/ToolbarTitle"
        android:theme="@style/toolBarStyle">

        <ImageView
            android:id="@+id/vehicleDistancePieChartPdfReport1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/white_pdf"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:orientation="horizontal"
        android:layout_margin="5dp">

            <Button
                android:id="@+id/vehicleDistancePieChartBtnFromDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/from_date"
                android:layout_margin="3dp"
                android:textSize="12sp"
                android:textColor="#262522"
                android:textStyle="bold"
                android:background="@drawable/buttonflatulta"
              />

            <Button
                android:id="@+id/vehicleDistancePieChartBtnToDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/to_date"
                android:layout_margin="3dp"
                android:textSize="12sp"
                android:textColor="#262522"
                android:textStyle="bold"
                android:background="@drawable/buttonflatulta"
                />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/vehicleDistancePieChartContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vehicleDistancePieChartTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Total Distance     "
            android:textColor="@color/DeepSkyBlue"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vehicleDistancePieChartTvTotalDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="      "
            android:textColor="@color/DeepSkyBlue"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/vehicleDistancePieChartRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refresh"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

</LinearLayout>